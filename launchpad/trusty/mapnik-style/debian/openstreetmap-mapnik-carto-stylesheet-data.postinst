#!/bin/sh 
# postinst script for openstreetmap-mapnik-data
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)

        . /usr/share/debconf/confmodule

	    db_get openstreetmap-mapnik-carto-stylesheet-data/dloadcoastlines || true
	    DLOAD_COAST=$RET
        
        if [ "x$DLOAD_COAST" = "xtrue" ] ; then
            ln -s /usr/share/mapnik-osm-carto-data /etc/mapnik-osm-carto-data/data
	        /usr/bin/openstreetmap-get-coastline-shapefiles /usr/share/mapnik-osm-carto-data || true
	    fi
	    true
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
